# top-most EditorConfig file
root = true

# Default settings:
# A newline ending every file
# Use 2 spaces as indentation
# Trim trailing whitespace
[*]
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[*.cs]
indent_size = 2
spaces_around_operators = true 
curly_bracket_next_line = true # not yet supported by VS plugin
indent_brace_style = KNF # not yet supported by VS plugin


[*.csproj]
indent_size = 2

[*.nuspec]
indent_size = 2